---
/* stylesheet */
import "../styles/style.css";

/* layout  */
import MainHead from "./main-head.astro";

/* components */
import Navbar from "../components/navbar.astro";

interface MainLayoutProps {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props as MainLayoutProps;
---

<html lang="en">
  <MainHead title={title} description={description} />
  <body class="font-bricolage bg-zinc-900 text-zinc-50">
    <Navbar />
    <main
      class="flex items-center justify-between py-6 mx-auto max-w-5xl px-5 md:px-6 lg:px-8"
    >
      <slot />
    </main>
  </body>
</html>
