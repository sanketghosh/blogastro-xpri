---
import MainLayout from "../layouts/main-layout.astro";
---

<MainLayout isNavbar={false}>
  <div class="m-auto">
    <div class="p-14 md:p-36 lg:p-64">
      <div class="space-y-5">
        <h1 class="text-5xl md:text-7xl lg:text-9xl font-bold text-center">
          404
        </h1>
        <h3 class="text-center font-semibold text-xl md:text-2xl">
          Oops! Seems you're lost.
        </h3>
        <span class="flex items-center justify-center">
          <a
            href="/"
            class="px-3 py-2 bg-green-700 hover:opacity-80 rounded-md transition-all text-zinc-50 text-lg"
          >
            Go Back To Home</a
          >
        </span>
      </div>
    </div>
  </div>
</MainLayout>
